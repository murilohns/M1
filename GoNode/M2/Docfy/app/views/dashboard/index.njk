{% extends 'layouts/dashboard.njk' %}

{% block body %}
  <section id="main">
    <div class="container">
      <header>
        <h2>Meus projetos ({{ projects.length }})</h2>
        <div class="addon">
          <form action="/projects" method="post">
            <input type="text" name="name" placeholder="Novo projeto">
            <button type="submit" class="btn">
              <img src="/img/plus.svg">
            </button>
          </form>
        </div>
      </header>

      <section id="content">
        <div class="project-list">
          {% for project in projects %}
            <a href="/projects/{{project.id}}">{{project.name}}</a>
          {% endfor %}
        </div>
      </section>
  </section>
{% endblock %}
